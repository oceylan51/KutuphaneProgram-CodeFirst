@model List<Book>
@{
    ViewData["Title"] = "Index";
}

@{
    if (ViewData["Result"].ToString() == "0")
    {
        <h1>Books</h1>
        <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
        <a asp-action="IsDeletedBooks" class="btn btn-sm btn-info">IsDeletedBooks</a>
        <table class="table table-md mt-2 table-dark ">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>YearOfPublication</td>
                    @* <td>BookEditionNumber</td> *@
                    @* <td>BookNumberOfPages</td>
                        <td>BookEditionNumber</td> *@
                    <td>BookQuantity</td>
                    @* <td>CategoryName</td> *@
                    <td>AuthorName</td>
                    <td>AuthorSurname</td>
                    <td>Publisher Name</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var Book in Model)
                {
                    <tr>
                        <td>@Book.BookName</td>
                        <td>@Book.BookYearOfPublication</td>
                        @* <td>@Book.BookEditionNumber</td> *@
                        @* <td>@Book.BookNumberOfPages</td>
                            <td>@Book.BookEditionNumber</td> *@
                        <td>@Book.BookQuantity</td>
                        @* <td>@Book.Category.CategoryName</td> *@
                        <td>@Book.Author.AuthorName</td>
                        <td>@Book.Author.AuthorSurname</td>
                        <td>@Book.Publisher.PublisherName</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id=@Book.BookId>Edit</a>
                            <a asp-action="Details" class="btn btn-sm btn-warning" asp-route-id=@Book.BookId>Details</a>
                            <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id=@Book.BookId>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>Categories</h1>
        <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
        <a asp-action="Index" class="btn btn-sm btn-info">List To Back</a>

        <table class="table table-md mt-2 table-dark ">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>YearOfPublication</td>
                    <td>Date OF Birth</td>
                    <td>BookEditionNumber</td>
                    @* <td>BookNumberOfPages</td> *@
                    @* <td>BookEditionNumber</td> *@
                    <td>BookQuantity</td>
                    @* <td>CategoryName</td> *@
                    <td>AuthorName</td>
                    <td>Publisher Name</td>
                    <td>IsDeleted</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var Book in Model)
                {
                    <tr>
                        <td>@Book.BookName</td>
                        <td>@Book.BookYearOfPublication</td>
                        <td>@Book.BookEditionNumber</td>
                        @* <td>@Book.BookNumberOfPages</td> *@
                        @* <td>@Book.BookEditionNumber</td> *@
                        <td>@Book.BookQuantity</td>
                        @* <td>@Book.Category.CategoryName</td> *@
                        <td>@Book.Author.AuthorName</td>
                        <td>@Book.Publisher.PublisherName</td>
                        <td>@Book.IsDeleted</td>
                    </tr>
                }
            </tbody>
        </table>
    }

}
