@model List<Publisher>
@{
    ViewData["Title"] = "Index";
}

@{
    if (ViewData["Result"].ToString() == "0")
    {
        <h1>Publishers</h1>
        <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
        <a asp-action="GetDeletedPublishers" class="btn btn-sm btn-info">GetDeletedPublishers</a>
        <table class="table table-md mt-2 table-dark ">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>City</td>
                    <td>Mail</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var publisher in Model)
                {
                    <tr>
                        <td>@publisher.PublisherName</td>
                        <td>@publisher.PublisherCity</td>
                        <td>@publisher.PublisherMail</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id=@publisher.PublisherId>Edit</a>
                            <a asp-action="Details" class="btn btn-sm btn-warning" asp-route-id=@publisher.PublisherId>Details</a>
                            <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id=@publisher.PublisherId>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>Publishers</h1>
        <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
        <a asp-action="Index" class="btn btn-sm btn-info">List To Back</a>
        <table class="table table-md mt-2 table-dark ">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>City</td>
                    <td>Mail</td>
                    <td>IsDeleted</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var publisher in Model)
                {
                    <tr>
                        <td>@publisher.PublisherName</td>
                        <td>@publisher.PublisherCity</td>
                        <td>@publisher.PublisherMail</td>
                        <td>@publisher.IsDeleted</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
