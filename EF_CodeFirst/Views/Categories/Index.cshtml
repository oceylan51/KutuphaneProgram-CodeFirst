@model List<EF_CodeFirst.Models.Category>
@{
    ViewData["Title"] = "Index";
}

@{
    if (ViewData["Result"].ToString() == "0")
    {
        <h1>Categories</h1>
        <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
        <a asp-action="GetDeletedCategories" class="btn btn-sm btn-info">GetDeletedCategories</a>
        <table class="table table-md mt-2 table-dark ">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Description</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.CategoryName</td>
                        <td>@cat.CategoryDescription</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id=@cat.CategoryId>Edit</a>
                            <a asp-action="Details" class="btn btn-sm btn-warning" asp-route-id=@cat.CategoryId>Details</a>
                            <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id=@cat.CategoryId>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h1>Categories</h1>
        <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
        <a asp-action="Index" class="btn btn-sm btn-info">List To Back</a>
        <table class="table table-md mt-2 table-dark ">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Description</td>
                    <td>IsDeleted</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.CategoryName</td>
                        <td>@cat.CategoryDescription</td>
                        <td>@cat.IsDeleted</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
